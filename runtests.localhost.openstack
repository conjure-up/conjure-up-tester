#!/bin/bash

set -eux

config="$(cat <<'EOF'
spell: openstack-novalxd
cloud: localhost
color: false
no-report: true
no-track: true
controller: $CI_CONTROLLER
model: $CI_MODEL
EOF
)"

juju ssh -m "$CI_CONTROLLER":"$CI_MODEL" ubuntu/0 "cat $config > Conjurefile"
juju ssh -m "$CI_CONTROLLER":"$CI_MODEL" ubuntu/0 "conjure-up -c Conjurefile"
exit $?
